m = 15 
A = [3, -2, 5, -1, 0, 4, 7, -5, 2, 1, -6, 8, -3, 9, -4]

print("Исходный массив A:", A)

positive_sum = sum(num for num in A if num > 0)
negative_count = sum(1 for num in A if num < 0)

for i in range(m):
    if A[i] < 0:
        A[i] *= 2

print("Преобразованный массив A:", A)
print("Сумма положительных элементов:", positive_sum)
print("Количество отрицательных элементов:", negative_count)
